{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}